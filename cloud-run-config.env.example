# Environment variables for Cloud Run deployment
# Copy this and set these in Cloud Run environment variables

# Required: Anthropic API key for LLM functionality
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Application configuration
PORT=8080
FLASK_ENV=production
ENABLE_AI=true

# Optional: Performance tuning
MAX_FILE_SIZE_MB=50
WORKER_TIMEOUT=300

# Cloud Run specific (set these in Cloud Run environment)
GOOGLE_CLOUD_PROJECT=your-project-id
CLOUD_RUN_SERVICE=financial-cleaner-api
CLOUD_RUN_REGION=us-central1

# Optional: Monitoring and logging
LOG_LEVEL=INFO
ENABLE_HEALTH_CHECKS=true

# Security (Cloud Run will handle these automatically)
# But you can override if needed
CORS_ORIGINS=*
MAX_CONTENT_LENGTH=52428800